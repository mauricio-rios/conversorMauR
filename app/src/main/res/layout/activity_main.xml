<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/txt_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Conversor de Unidades"
            android:textColor="#FF9800"
            android:textSize="38dp" />

        <ImageView
            android:id="@+id/imagenT"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/conversor_removebg_preview"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txt_titulo"/>

        <RadioGroup
            android:id="@+id/contenedor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagenT"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" >


            <TextView
                android:id="@+id/txt_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Elija una de las opciones"
                android:textColor="#3679BC"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/temperatura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temperatura"
                android:checked="false"
                android:layout_marginTop="10dp"/>

            <RadioButton
                android:id="@+id/peso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Peso"
                android:checked="false" />
            <RadioButton
                android:id="@+id/longitud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Longitud"
                android:checked="false" />
            <RadioButton
                android:id="@+id/volumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Volumen"
                android:checked="false" />

            <Button
                android:id="@+id/btn_aceptar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="#9C27B0"
                android:text="Aceptar"
                android:textColor="#E4F81C"
                android:textStyle="bold" />
        </RadioGroup>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>